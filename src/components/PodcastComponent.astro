import { Image } from "astro:assets";

const { titulo, episodio, imagen } = Astro.props;
Image;
import "../styles/podcast.css";
---

<section class="podcast__component__container">
    <div class="podcast__component__top">
        <div class="podcast__component__last__podcast__ti tle">
            <span class="podcast__component__last__podcast__title__text"
