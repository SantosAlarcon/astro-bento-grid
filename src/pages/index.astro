---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import "../styles/credit-card.css";
import GridComponent from "../components/GridComponent.astro";
import CreditCardComponent from "../components/CreditCardComponent.astro";
import IncomeComponent from "../components/IncomeComponent.astro";
import PodcastComponent from "../components/PodcastComponent.astro";
---

<!doctype html>
<html lang="es">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <h1>Astro Bento Grid</h1>
        <main id="grid__container">
            <CreditCardComponent
                titular="Federico Jimenez Losantos"
                saldo="13000"
            />
            <IncomeComponent amount="950" />
            <PodcastComponent titulo="Todopoderosos" episodio="TODOPODEROSOS #103 Akira Kurosawa y el pasodoble. (Kurosawa Vol. I)" imagen="https://img-static.ivoox.com/index.php?w=145&h=145&url=https://static-1.ivoox.com/canales/2/1/6/1/5661525711612_XXL.jpg" />
            <GridComponent title="Componente 1" />
            <GridComponent title="Componente 2" />
            <GridComponent title="Componente 3" />
            <GridComponent title="Componente 4" />
            <GridComponent title="Componente 5" />
            <GridComponent title="Componente 6" />
            <GridComponent title="Componente 7" />
            <GridComponent title="Componente 8" />
            <GridComponent title="Componente 9" />
        </main>
    </body>
</html>
