---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import "../styles/grid.css";
import CreditCardComponent from "../components/CreditCardComponent.astro";
import IncomeComponent from "../components/IncomeComponent.astro";
import PodcastComponent from "../components/PodcastComponent.astro";
import ImageComponent from "../components/ImageComponent.astro";
import TwitchComponent from "../components/TwitchComponent.astro";
import YouTubeComponent from "../components/YouTubeComponent.astro";
import DateTimeComponent from "../components/DateTimeComponent.astro";
import SystemInfoComponent from "../components/SystemInfoComponent.astro"
import TwitterComponent from "../components/TwitterComponent.astro"
import PhoneComponent from "../components/PhoneComponent.astro"
import TaskListComponent from "../components/TaskListComponent.astro";
---

<!doctype html>
<html lang="es">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <h1>Astro Bento Grid</h1>
        <main id="grid__container">
            <CreditCardComponent
                titular="Federico Jimenez Losantos"
                saldo="13000"
            />
            <IncomeComponent amount="950" />
            <PodcastComponent
                titulo="Todopoderosos"
                episodio="TODOPODEROSOS #103 Akira Kurosawa y el pasodoble. (Kurosawa Vol. I)"
                imagen="https://img-static.ivoox.com/index.php?w=145&h=145&url=https://static-1.ivoox.com/canales/2/1/6/1/5661525711612_XXL.jpg"
            />
            <ImageComponent
                src="/astro-bento-grid/grafico.webp"
                alt="Uso de frameworks en EspaÃ±a"
		bg="#fff"
		width="40%"
            />
            <TwitchComponent newFollower="momotamomo" />
            <YouTubeComponent subscribers="9600" />
            <DateTimeComponent locale="es-es" />
	    <SystemInfoComponent />
	    <TwitterComponent />
            <TaskListComponent />
	    <ImageComponent src="/astro-bento-grid/react-logo.svg" alt="" bg="#111" width="50%" />
	    <PhoneComponent />
	    <ImageComponent src="/astro-bento-grid/astro-logo-gradient.svg" alt="" bg="#111" width="100%" />
	    <ImageComponent src="/astro-bento-grid/linkedin-logo.svg" alt="" bg="#113" width="100%" />
        </main>
    </body>
</html>
